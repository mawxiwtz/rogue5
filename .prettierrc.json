{
  "useTabs": false,
  "tabWidth": 4,
  "endOfLine": "lf",
  "singleQuote": true,
  "printWidth": 100,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "semi": true
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "printWidth": 120,
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": "*.html",
      "options": {
        "bracketSameLine": true
      }
    }
  ]
}
